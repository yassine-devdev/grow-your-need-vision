# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# Owner Credentials (Production)
OWNER_EMAIL=owner@yourdomain.com
OWNER_PASSWORD=<generate-secure-password>

# PocketBase Configuration
POCKETBASE_URL=http://127.0.0.1:8090
POCKETBASE_SERVICE_TOKEN=<your-service-token>

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (Production)
STRIPE_PRICE_BASIC=price_live_basic_xxx
STRIPE_PRICE_PRO=price_live_pro_xxx
STRIPE_PRICE_ENTERPRISE=price_live_enterprise_xxx

# Service Configuration
SERVICE_API_KEY=<generate-random-api-key>
PORT=3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=sk-your-openai-api-key

# Email Service Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=<your-sendgrid-api-key>
SMTP_FROM=noreply@yourdomain.com

# Monitoring & Observability
SENTRY_DSN=<your-sentry-dsn>
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_RELEASE=<version>
OTEL_EXPORTER_OTLP_ENDPOINT=<your-otel-endpoint>
OTEL_EXPORTER_OTLP_HEADERS=<headers>
OTEL_EXPORTER_OTLP_AUTH_TOKEN=<auth-token>

# Node Environment
NODE_ENV=production

# Security Notes:
# 1. Generate strong passwords: openssl rand -base64 32
# 2. Rotate credentials regularly (every 90 days)
# 3. Use different credentials for each environment
# 4. Never share credentials via email or chat
# 5. Store production credentials in a secure vault (e.g., AWS Secrets Manager)
