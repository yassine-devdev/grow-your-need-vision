# Production Environment Variables Template
# Copy this to .env.production and fill in your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# PocketBase Backend
VITE_POCKETBASE_URL=https://your-domain.pocketbase.io

# App Version
VITE_APP_VERSION=1.0.0

# Environment
NODE_ENV=production

# =============================================================================
# STORAGE (S3/R2)
# =============================================================================
VITE_STORAGE_ENDPOINT=https://your-storage-endpoint.com
VITE_STORAGE_REGION=auto
VITE_STORAGE_ACCESS_KEY=your_access_key
VITE_STORAGE_SECRET_KEY=your_secret_key
VITE_STORAGE_BUCKET=growyourneed-files
VITE_STORAGE_PUBLIC_URL=https://cdn.your-domain.com

# =============================================================================
# MARKETPLACE (MEDUSA)
# =============================================================================
VITE_MEDUSA_BACKEND_URL=https://your-medusa-backend.com

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
VITE_EMAIL_PROVIDER=smtp
VITE_SMTP_HOST=smtp.your-provider.com
VITE_SMTP_PORT=587
VITE_SMTP_USERNAME=your_username
VITE_SMTP_PASSWORD=your_password
VITE_SMTP_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# AI SERVICES
# =============================================================================
VITE_AI_SERVICE_URL=https://ai.your-domain.com
AI_PROVIDER=openai
VITE_OPENAI_API_KEY=sk-your_openai_key_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
VITE_SENTRY_DSN=https://your-sentry-dsn

# Enable analytics
VITE_ANALYTICS_ENABLED=true
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_AI=true
VITE_ENABLE_MEDIA_UPLOADS=true
VITE_ENABLE_GAMIFICATION=true
